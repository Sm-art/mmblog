<h1>Listing posts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', category_post_path(@current_category, post) %></td>
    <td><%= link_to 'Edit', edit_category_post_path(@current_category, post) %></td>
    <td><%= link_to 'Destroy', [@current_category, post], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

